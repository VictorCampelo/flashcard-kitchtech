{
    "name": "victor-campelo/flashcard-backend",
    "description": "Backend REST API for Flashcard App - PHP + MySQL",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Campelo",
            "email": "victor_campelo@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --testdox",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs --standard=PSR12 src tests",
        "lint:fix": "phpcbf --standard=PSR12 src tests",
        "migrate": "php migrate up",
        "migrate:status": "php migrate status",
        "migrate:rollback": "php migrate down",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
