# Application
APP_ENV=development
APP_DEBUG=true

# Database (MySQL)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=flashcards_db
DB_USER=flashcard_user
DB_PASSWORD=flashcard_secret
DB_CHARSET=utf8mb4

# MySQL Root (for Docker only)
MYSQL_ROOT_PASSWORD=root_secret

# Server Ports (Docker)
BACKEND_PORT=8000
MYSQL_PORT=3306

# CORS Settings (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000